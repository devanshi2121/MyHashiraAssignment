import java.io.FileReader;
import org.json.JSONObject;
import org.json.JSONArray;

public class ConstantTermFromJSON {
    public static void main(String[] args) {
        try {
            // Read the JSON file
            FileReader reader = new FileReader("roots.json");
            StringBuilder sb = new StringBuilder();
            int i;
            while ((i = reader.read()) != -1) {
                sb.append((char) i);
            }
            reader.close();

            // Parse JSON data
            JSONObject obj = new JSONObject(sb.toString());
            double a = obj.getDouble("a");
            JSONArray rootsArray = obj.getJSONArray("roots");

            // Calculate product of roots
            double product = 1;
            for (int j = 0; j < rootsArray.length(); j++) {
                product *= rootsArray.getDouble(j);
            }

            // Number of roots
            int n = rootsArray.length();

            // Calculate constant term: c = a * (-1)^n * (product of roots)
            double c = a * Math.pow(-1, n) * product;

            // Print result
            System.out.println("Constant term (c) = " + c);

        } catch (Exception e) {
            e.printStackTrace();
        }
    }
}
