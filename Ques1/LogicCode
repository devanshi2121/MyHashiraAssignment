import java.util.Scanner;

public class ConstantTermFinder {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        // Input coefficient 'a'
        System.out.print("Enter coefficient a: ");
        double a = sc.nextDouble();

        // Input number of roots
        System.out.print("Enter number of roots (n): ");
        int n = sc.nextInt();

        double[] roots = new double[n];
        double product = 1;

        // Input roots
        System.out.println("Enter the roots:");
        for (int i = 0; i < n; i++) {
            roots[i] = sc.nextDouble();
            product *= roots[i];
        }

        // Calculate constant term c = a * (-1)^n * product of roots
        double c = a * Math.pow(-1, n) * product;

        System.out.println("Constant term (c) = " + c);

        sc.close();
    }
}
